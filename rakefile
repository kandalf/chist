@env = ARGV[1].nil? ? 'development' : ARGV[1]
task @env do ;  end unless ARGV[1].nil?

namespace :db do
  desc "Create/Update tables"
  task :generate do
    require 'sequel'
    require_relative 'lib/chist'

    DB = Chist::Database.connect(Chist::Settings.load['db'])

    load './db/init.rb'
  end
end
