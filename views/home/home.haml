#home-description
  #logo-container.col-md-4.col-md-offset-2
    %img{ :src => "/img/chist_logo.png", :width => "277", :height => "144" }
    #moto
      Share your chat with style

.left-separator.col-md-4
  %h3=I18n.t('home.login.login')
  %form.form-horizontal{action: '/users/login', method: 'post'}
    %fieldset
      .form-group
        .col-lg-11
          %input#email.form-control{type: 'email', name: 'email', required: true, placeholder: I18n.t('home.email')}
      .form-group
        .col-lg-11
          %input#password.form-control{type: 'password', name: 'password', required: true,placeholder: I18n.t('home.password') }
      .form-group
        .col-lg-11
          %input.btn.btn-xs{type: 'submit', value: I18n.t('home.login.login')}

  %h4=I18n.t('home.login_omniauth')
  %ul#login-providers
    %li
      %a{href: '/auth/twitter'}
        %img{ :src => "/img/twitter.jpg" }
    %li
      %a{href: '/auth/github'}
        %img{ :src => "/img/github.jpg" }
    %li
      %a{href: '/auth/facebook'}
        %img{ :src => "/img/facebook.jpg" }

  %hr

  %h4=I18n.t('home.new_user')
  %form.form-horizontal{action: '/users', method: 'post'}
    %fieldset
      .form-group
        .col-lg-11
          %input.form-control{ type: 'email', name: 'email', required: true, placeholder: I18n.t('home.email') }
      .form-group
        .col-lg-11
          %input.form-control{ type: 'password', name: 'password', required: true, placeholder: I18n.t('home.password') }
      .form-group
        .col-lg-11
          %input.form-control{ type: 'password', name: 'confirm_password', required: true, placeholder: I18n.t('home.confirm_password') }
      .form-group
        .col-lg-11
          %input.btn.btn-xs{type: 'submit', value: I18n.t('home.signup')}

