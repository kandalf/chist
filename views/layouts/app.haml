<!DOCTYPE html>
%html{ :lang => :en }
  %head
    %title Chist
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }
    - if defined?(is_public) && !is_public
      %meta{ :name => "robots", :content => "noindex, nofollow"}
      %meta{ :name => "referrer", :content => "never"}
    %link{ :href => "/img/favicon.ico", :rel => "shortcut icon"}
    %link{ :href => "/css/bootstrap.min.css", :rel => "stylesheet" }
    %link{ :href => "/css/chosen.min.css", :rel => "stylesheet" }
    %link{ :href => "/css/chosen_select_extend.css", :rel => "stylesheet" }
    %link{ :href => "/css/layout.css", :rel => "stylesheet" }
    %link{ :href => "/css/chist.css", :rel => "stylesheet" }
    %link{ :href => "/css/base.css", :rel => "stylesheet" }
    %link{ :href => "/css/bootstrap_override.css", :rel => "stylesheet" }
    %link{ :href => 'http://fonts.googleapis.com/css?family=Oxygen+Mono', :rel => 'stylesheet', :type => 'text/css' }
    - if defined?(chist)
      %link{ :rel => "alternate", :type => "application/json+oembed", :href => "#{ENV['SITE_URL']}/services/oembed?url=#{URI.encode_www_form_component("#{ENV['SITE_URL']}/chists/#{chist.id}")}&format=json", :title => "#{chist.user.name}/#{chist.title}"}
  %body
    #wrap
      = partial 'shared/_header'
      #container.container
        .flash-messages
          =show_flash_message
        = yield
      = partial 'shared/_footer'
      = partial 'shared/_delete_chist_modal'

    %script{ :src => "https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js", :type => "text/javascript" }
    %script{ :src => "//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js" }
    %script{ :src => "/js/chosen.jquery.min.js", :type => "text/javascript" }
    %script{ :src => "/js/chist.js", :type => "text/javascript" }
